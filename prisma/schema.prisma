generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  feedback Feedback[]
}

model Feedback {
  id        String   @id @default(cuid())
  name      String
  text      String
  sentiment String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [id], references: [id])
}
